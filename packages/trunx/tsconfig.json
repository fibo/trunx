{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "lib": ["dom", "es2015"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "sourceMap": false,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}

