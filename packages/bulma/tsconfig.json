{
  "extends": "../../tsconfig.common.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "importHelpers": true,
    "lib": ["dom", "es2015"],
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "removeComments": true,
    "rootDir": "./src",
    "sourceMap": false,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "exclude": ["node_modules", "./src/**/*_test.ts"],
  "include": ["./src/**/*.ts", "./src/**/*.tsx"]
}
