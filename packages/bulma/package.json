{
  "name": "@trunx/bulma",
  "version": "1.0.0",
  "description": "Super Saiyan tools, son of awesome Bulma",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "check_types": "tsc --noEmit --project .",
    "generate_bulma_classes_types": "postcss ./node_modules/bulma/css/bulma.css --config ./generate_bulma_classes_types --output ./node_modules/bulma/css/output.css",
    "pretest": "tsc --build tsconfig.test.json",
    "preversion": "npm run build",
    "test": "node --test --test-reporter spec"
  },
  "keywords": [
    "bulma"
  ],
  "author": {
    "name": "Gianluca Casati",
    "url": "https://fibo.github.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/fibo/trunx/tree/main/packages/bulma",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fibo/trunx.git"
  },
  "bugs": {
    "url": "https://github.com/fibo/trunx/issues"
  },
  "dependencies": {
    "@trunx/classnames": "0.1.1",
    "bulma": "1.0.0"
  }
}
