{
  "name": "trunx-monorepo",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:bulma": "npm run build -w packages/bulma",
    "build:trunx": "npm run build -w packages/trunx",
    "clean": "npm run clean --workspaces --if-present",
    "check_types": "npm run check_types --workspaces --if-present",
    "generate_bulma_classes_types": "postcss ./node_modules/bulma/css/bulma.css --config ./npm-scripts/generate_bulma_classes_types --output ./node_modules/bulma/css/output.css",
    "prestart": "npm run build:trunx",
    "prettier": "prettier --write .",
    "prettier--check": "prettier --check .",
    "start": "npm run dev -w webapps/trunx-docs",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "eslint": "^8",
    "eslint-plugin-import": "^2",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^4",
    "lint-staged": "^13",
    "postcss": "^8",
    "postcss-cli": "^10",
    "postcss-ts-classnames": "^0.3.0",
    "pre-commit": "^1",
    "prettier": "^2",
    "prettier-plugin-jsdoc": "^0.4.2",
    "react": "^18",
    "react-dom": "^18",
    "typescript": "^5"
  },
  "pre-commit": [
    "check_types",
    "test",
    "prettier--check"
  ],
  "prettier": {
    "semi": false,
    "plugins": [
      "prettier-plugin-jsdoc"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "options": {
          "tsdoc": true
        }
      }
    ]
  },
  "workspaces": [
    "packages/bulma",
    "packages/classnames",
    "packages/trunx",
    "webapps/trunx-docs"
  ]
}
