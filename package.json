{
  "name": "trunx",
  "version": "1.0.0",
  "description": "Super Saiyan components, son of awesome Bulma",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc --build ./tsconfig.build.json",
    "generate_bulma_types": "postcss ./node_modules/bulma/css/bulma.css --config ./generate_bulma_types --output ./node_modules/bulma/css/output.css",
    "pretest": "tsc --build tsconfig.test.json",
    "prettier": "prettier --write .",
    "prettier--check": "prettier --check .",
    "test": "node --test --test-reporter spec"
  },
  "dependencies": {
    "bulma": "1.0.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "react": "^18",
    "postcss": "^8",
    "postcss-cli": "^10",
    "postcss-ts-classnames": "^0.3.0",
    "pre-commit": "^1",
    "prettier": "^3",
    "typescript": "^5"
  },
  "peerDependencies": {
    "react": ">= 17"
  },
  "keywords": [
    "bulma",
    "react",
    "typescript"
  ],
  "author": {
    "name": "Gianluca Casati",
    "url": "https://fibo.github.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/fibo/trunx/tree/main",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fibo/trunx.git"
  },
  "bugs": {
    "url": "https://github.com/fibo/trunx/issues"
  },
  "prettier": {
    "printWidth": 117,
    "semi": false
  },
  "pre-commit": [
    "test",
    "prettier--check"
  ]
}
