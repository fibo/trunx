{
  "name": "trunx-monorepo",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "build:trunx": "npm run build -w packages/trunx",
    "cleanup": "npm run cleanup --workspaces --if-present",
    "check_types": "npm run check_types --workspaces --if-present",
    "generate_BulmaClassName_type": "postcss ./node_modules/bulma/css/bulma.css --config ./npm-scripts/generate_BulmaClassName_type --output ./node_modules/bulma/css/output.css",
    "lint": "npm run lint --workspaces --if-present",
    "lint-staged": "lint-staged",
    "prestart": "npm run build:trunx",
    "start": "npm run dev -w webapps/trunx-docs",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^18",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^5",
    "@typescript-eslint/parser": "^5",
    "eslint": "^8",
    "eslint-plugin-import": "^2",
    "eslint-plugin-react": "^7",
    "eslint-plugin-react-hooks": "^4",
    "eslint-plugin-tsdoc": "^0.2.17",
    "lint-staged": "^13",
    "postcss": "^8",
    "postcss-cli": "^10",
    "postcss-ts-classnames": "^0.3.0",
    "pre-commit": "^1",
    "prettier": "^2",
    "prettier-plugin-jsdoc": "^0.4.2",
    "react": "^18",
    "react-dom": "^18",
    "rimraf": "^4",
    "typescript": "^4"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.{css,json,md,scss}": [
      "prettier --write"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "check_types",
    "test"
  ],
  "prettier": {
    "semi": false,
    "plugins": [
      "prettier-plugin-jsdoc"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "options": {
          "tsdoc": true
        }
      }
    ]
  },
  "workspaces": [
    "packages/trunx",
    "webapps/trunx-docs"
  ]
}
