{
  "name": "trunx-monorepo",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "clean": "npm run clean --workspaces --if-present",
    "check_types": "npm run check_types --workspaces --if-present",
    "generate_bulma_classes_types": "npm run generate_bulma_classes_types -w packages/bulma",
    "prettier": "prettier --write .",
    "prettier--check": "prettier --check .",
    "test": "npm run test --workspaces --if-present"
  },
  "devDependencies": {
    "@types/node": "^20.12.12",
    "@types/react": "^18.3.2",
    "postcss": "^8",
    "postcss-cli": "^10",
    "postcss-ts-classnames": "^0.3.0",
    "pre-commit": "^1",
    "prettier": "^2",
    "prettier-plugin-jsdoc": "^0.4.2",
    "typescript": "^5"
  },
  "pre-commit": [
    "check_types",
    "test",
    "prettier--check"
  ],
  "prettier": {
    "semi": false,
    "plugins": [
      "prettier-plugin-jsdoc"
    ],
    "overrides": [
      {
        "files": [
          "*.ts",
          "*.tsx"
        ],
        "options": {
          "tsdoc": true
        }
      }
    ]
  },
  "workspaces": [
    "packages/bulma",
    "packages/classnames",
    "packages/react",
    "packages/trunx"
  ]
}
