{
  "name": "trunx-monorepo",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "npm run build --workspaces --if-present",
    "check_types": "npm run check_types --workspaces --if-present",
    "lint": "npm run lint --workspaces --if-present",
    "prestart": "npm run build -w packages/trunx",
    "start": "npm run dev -w webapps/trunx-docs"
  },
  "devDependencies": {
    "@types/node": "^18.0.3",
    "prettier": "^2.7.1",
    "typescript": "^4.9.4"
  },
  "workspaces": [
    "packages/trunx",
    "webapps/trunx-docs"
  ]
}
